<script>
	import gsap from 'gsap'
	import { ScrollTrigger } from 'gsap/ScrollTrigger'
	gsap.registerPlugin(ScrollTrigger)

	const titles = document.querySelectorAll('.collaboration h2')
	const texts = document.querySelectorAll('.collaboration p')
	const mockups = document.querySelectorAll('.collaboration img')

	// Scroll animations
	gsap.from(titles, {
		yPercent: 30,
		opacity: 0,
		ease: 'Power3.easeOut',
		scrollTrigger: {
			trigger: titles,
			start: '150px bottom',
			end: 'bottom end',
			scrub: 1,
			// markers: true

		}
	})

	gsap.from(texts, {
		yPercent: 60,
		opacity: 0,
		ease: 'Power3.easeOut',
		scrollTrigger: {
			trigger: titles,
			start: '200px bottom ',
			end: 'bottom end',
			scrub: 1,
			// markers: true
		}
	})

    gsap.from(mockups, {
        xPercent: 60,
        scale: 0.5,
        opacity: 0,
        ease: 'Power3.easeOut',
        scrollTrigger: {
            trigger: titles,
            start: '290px bottom ',
            end: 'bottom end',
            scrub: 1,
            // markers: true
        }
    })


</script>
